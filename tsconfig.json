{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "lib": ["es2015", "es2021", "dom"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib"]
}